[flake8]
# required by black, https://github.com/psf/black/blob/master/.flake8
max-line-length = 88
max-complexity = 18
ignore = D401, E203, E266, W503, F403, F401
select = B,C,D,E,F,W,T4,B9
docstring-convention = numpy
per-file-ignores =
    __init__.py:F401
    tests/test_netatmo_geopy.py:D103
exclude =
    .git,
    __pycache__,
    setup.py,
    build,
    dist,
    releases,
    .venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .vscode,
    .github
